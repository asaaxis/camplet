<div class="texts-wrapper">
  <div class="contents-title text-center">
    <h1 class = "mt-5 mb-5">所属チーム一覧</h1>

    <table class = "table table-striped" style="background-color: #e3e9fd">
      <thead>
        <tr>
          <th>チーム名</th>
          <th>所属人数</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.members.count %></td>
            <td>
              <button type="button" class="btn btn-outline-info" style="background-color: #e3f2fd;">
                <%= link_to '詳細', team %>
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



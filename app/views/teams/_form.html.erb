<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "件のエラー") %> のためチームは登録出来ませんでした</h2>

      <ul>
        <% team.errors.each do |error| %>
          <p><%= error.full_message %></p>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :チーム名 %>
    <%= form.text_field :name, placeholder: "例)BasicTeam" %>
  </div>

  <div class="mt-2 actions">
    <%= form.submit class: "btn btn-outline-info", style: "background-color: #e3f2fd;"%>
  </div>
<% end %>

<div class="texts-wrapper">
  <div class="contents-title text-center">
    <h1 class = "mt-5 mb-5">キャンプギア詳細</h1>
      <div class="mt-3 mb-3 card" style="width: 20rem; background-color: #e3e9fd">
        <% if @gear.image.present? %>
          <%= image_tag @gear.image.url, class: "card-img-top" %>
        <% else %>
          <%= image_tag 'camplet.png', size: '300x300', class: "card-img-top" %>
        <% end %>
        <div class="card-body">
        <h5 class="card-title">名前:<%= @gear.name %></h5>
        <p class="card-text">ユーザー:<%= @gear.user.name %></p>
        <p class="card-text">詳細:<%= @gear.description %></p>
        <p class="card-text">数量:<%= @gear.quantity %></p>
        <button type="button" class="btn btn-outline-success" style="background-color: #e3f2fd;">
          <%= link_to '編集', edit_gear_path(@gear) %>
        </button>
        <button type="button" class="btn btn-outline-danger" style="background-color: #e3f2fd;">
          <%= link_to '削除', @gear, method: :delete, data: { confirm: '本当に削除しますか?' } %>
        </button>
        <button type="button" class="btn btn-outline-info" style="background-color: #e3f2fd;">
          <%= link_to 'キャンプギア一覧', gears_path %>
        </button>
      </div>
    </div>
  </div>
</div>


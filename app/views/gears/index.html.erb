
<h1>キャンプギア一覧</h1>

<h3>ギア検索</h3>
<%= search_form_for @q, url: search_gears_path do |f| %>
  <%= f.label :name_cont, '名前' %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>名前</th>
      <th>数量</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.user.name %></td>
        <td><%= gear.name %></td>
        <td><%= gear.quantity %></td>
        <td><%= image_tag gear.image.url if gear.image.present? %></td>
        <td><%= link_to '詳細', gear %></td>
      </tr>
    <% end %>
  </tbody>
</table>


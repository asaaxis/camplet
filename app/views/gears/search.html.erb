<div class="texts-wrapper">
  <div class="contents-title text-center">
    <h1 class = "mt-5 mb-5">検索結果</h1>

    <button type="button" class="btn btn-outline-primary btn-lg" style="background-color: #e3f2fd;">
      <%= link_to 'ギア一覧へ', gears_path %>
    </button>

    <table>
      <tbody>
        <div class="row">
          <% @results.each do |gear| %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="mt-3 mb-3 card" style="width: 20rem; background-color: #e3e9fd">
                <img src="<%= gear.image.url if gear.image.present? %>" alt="カードの画像" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title">名前:<%= gear.name %></h5>
                  <p class="card-text">ユーザー:<%= gear.user.name %></p>
                  <p class="card-text">数量:<%= gear.quantity %></p>
                  <button type="button" class="btn btn-outline-info" style="background-color: #e3f2fd;">
                    <%= link_to '詳細', gear %>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </tbody>
    </table>
  </div>
</div>

<ul>
  <% chats.each do |chat| %>
    <% if chat.id.present? %>
      <li>
        <div class="chat-content" id ="this_chat_<%= chat.id %>"></div>
        <p>投稿者：<%= chat.user.name %>さん</p>
        <p>内容：<%= chat.content %></p>
        <p>
          <%= link_to edit_chat_path(chat), remote: true do %><i class="bi bi-pencil-square"></i><% end %>
          <%= link_to chat_path(chat), method: :delete, remote: true,
                                      data: { confirm: "本当に削除しますか?"} do %><i class="bi bi-trash"></i><% end %>
        </p>
      </li>
    <% end %>
  <% end %>
</ul>
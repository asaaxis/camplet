<ul>
  <% chats.each do |chat| %>
    <% if chat.id.present? %>
      <li>
        <div class="chat-content" id ="this_chat_<%= chat.id %>"></div>
        <p>投稿者：<%= chat.user.name %>さん</p>
        <p>内容：<%= chat.content %></p>
        <p><%= link_to "コメント編集", edit_chat_path(chat), remote: true %></p>
        <p><%= link_to "コメント削除", chat_path(chat), method: :delete, remote: true,
                                      data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
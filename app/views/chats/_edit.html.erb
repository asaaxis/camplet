<%= form_with(model: chat, local: false) do |form| %>
  <% if chat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chat.errors.count, "件のエラー") %> のためチャットは保存出来ませんでした</h2>
      <ul>
      <% chat.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_area :content %>
    <%= form.label :content %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-info", style: "background-color: #e3f2fd;" %>
  </div>
<% end %>
